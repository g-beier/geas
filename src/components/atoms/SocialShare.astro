---
import { Icon } from 'astro-icon';
const { text, url, class: className = 'inline-block' } = Astro.props;
---

<div class={className}>
	<span class="align-super font-semibold">Compartilhar:</span>
	<button
		class="ml-2"
		title="Compartilhar no Twitter"
		data-aw-social-share="twitter"
		data-aw-url={url}
		data-aw-text={text}
		><Icon name="tabler:brand-twitter" class="w-6 h-6" />
	</button>
	<button class="ml-2" title="Compartilhar no Facebook" data-aw-social-share="facebook" data-aw-url={url}
		><Icon name="tabler:brand-facebook" class="w-6 h-6" />
	</button>
	<button
		class="ml-2"
		title="Compartilhar no Linkedin"
		data-aw-social-share="linkedin"
		data-aw-url={url}
		data-aw-text={text}
		><Icon name="tabler:brand-linkedin" class="w-6 h-6" />
	</button>
	<button
		class="ml-2"
		title="Compartilhar no Whatsapp"
		data-aw-social-share="whatsapp"
		data-aw-url={url}
		data-aw-text={text}
		><Icon name="tabler:brand-whatsapp" class="w-6 h-6" />
	</button>
	<button class="ml-2" title="Enviar por email" data-aw-social-share="mail" data-aw-url={url} data-aw-text={text}
		><Icon name="tabler:mail" class="w-6 h-6" />
	</button>
</div>
