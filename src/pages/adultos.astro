			{ name: 'Leonardo', role: 'Diretor Vice-Presidente' },
			{ name: 'Etiane', role: 'Diretora Administrativa' },
			{
				name: 'Daniel',
				role: 'Diretor Administrativo Adjunto',
				imgURL: '~/assets/images/adultos/daniel.jpg',
			},
			{ name: 'Elsa', role: 'Diretora Administrativa Adjunta' },
			{
				name: 'Marineris',
				role: 'Diretora Financeira',
