];
---

<Layout meta={meta}>
	<section class="mx-auto max-w-3xl px-6 py-12 sm:px-6 sm:py-16 lg:py-20">
		<header>
			<h1
				class="leading-tighter font-heading mb-8 text-center text-3xl font-bold tracking-tighter md:mb-12 md:text-4xl"
			>
				Adultos Voluntários
			</h1>
		</header>
		{
			adultos.map(({ title, description, voluntarios }) => (
				<>
					<h2 class="mt-12 text-2xl font-bold tracking-tight">{title}</h2>
					{description && <p class="">{description}</p>}
					<ul class="mt-8 grid grid-cols-4 gap-8">
						{voluntarios.map(({ name, role, imgURL }) => (
							<VolunteerCard name={name} role={role} imgURL={imgURL} />
						))}
					</ul>
				</>
			))
		}
	</section>
</Layout>
